.section
  position: relative
  width: 100vw
  height: 100vh

.button
  display: inline-block
  cursor: pointer
  text-decoration: none
  padding: 10px 15px
  margin: 0 10px
  background-color: white
  color: color-blue
  transition: transform 0.15s bezier
  transform: scale(1.00)
  &:hover
    transform: scale(1.10)

.button--cta
  background-color: color-blue
  color: white
