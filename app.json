{
  "name": "heroku-auto-test",
  "description": "this app tests auto deploy to heroku",
  "keywords": [
    "automation"
  ],
  "scripts": {
    "postdeploy": "echo 'deployed'"
  },
  "env": {
    "TEMP_PASSWORD": {
      "description": "A temp password to login",
      "generator": "secret"
    },
    "NODE_ENV": {
      "description": "what environment is the app running in",
      "value": "production"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "image": "heroku/nodejs",
  "addons": [
    "mongolab:sandbox"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
